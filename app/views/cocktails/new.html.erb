<div class="container">
  <div class="row">
    <div class="col">
      <h1>New cocktail</h1>

      <div class="row">
        <div class="col-lg-4">
          <%= simple_form_for @cocktail do |f| %>
            <%= f.input :name %>
            <%= f.input :photo, as: :file %>
            <%= f.submit 'new cocktail', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
