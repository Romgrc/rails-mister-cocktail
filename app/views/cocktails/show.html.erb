<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "remove a dose", dose_path(dose), method: 'delete', data: { confirm: 'Are you sure? Really?' }  %></li>
  <% end %>
</ul>
<%= @cocktail.photo.attached? ? (cl_image_tag @cocktail.photo.key, height: 150, width: 150, crop: :fill) : image_tag('cocktail.jpg') %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
