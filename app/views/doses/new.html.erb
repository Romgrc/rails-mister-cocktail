<div class="container">
  <div class="row">
    <div class="col">
      <h1>New dose</h1>

      <div class="row">
        <div class="col-lg-4">
          <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.input :description %>
            <%= f.association :ingredient %>

            <%= f.submit 'new dose', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
